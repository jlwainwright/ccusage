    "es-toolkit": "^1.39.3",
    "fast-sort": "^3.4.1",
    "hono": "^4.8.0",
    "path-type": "^6.0.0",
    "string-width": "^7.2.0",
    "tinyglobby": "^0.2.14",
    "type-fest": "^4.41.0",
    "xdg-basedir": "^5.1.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@antfu/utils": "^9.2.0",
    "@core/errorutil": "npm:@jsr/core__errorutil",
