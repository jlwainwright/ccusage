    "@types/bun": "^1.2.16",
    "clean-pkg-json": "^1.3.0",
    "eslint": "^9.29.0",
    "eslint-plugin-format": "^1.0.1",
    "fs-fixture": "^2.8.1",
    "publint": "^0.3.12",
    "rollup-plugin-node-externals": "^8.0.1",
    "tsdown": "^0.12.8",
    "unplugin-macros": "^0.17.0",
    "unplugin-unused": "^0.5.1",
    "vitest": "^3.2.4"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./_consts": {
      "import": "./dist/_consts.js",
      "require": "./dist/_consts.cjs"
    },
    "./_macro": {
      "import": "./dist/_macro.js",
      "require": "./dist/_macro.cjs"
    },
    "./_session-blocks": {
      "import": "./dist/_session-blocks.js",
      "require": "./dist/_session-blocks.cjs"
    },
    "./_types": {
      "import": "./dist/_types.js",
      "require": "./dist/_types.cjs"
    },
    "./_utils": {
      "import": "./dist/_utils.js",
      "require": "./dist/_utils.cjs"
    },
    "./calculate-cost": {
      "import": "./dist/calculate-cost.js",
      "require": "./dist/calculate-cost.cjs"
    },
    "./data-loader": {
      "import": "./dist/data-loader.js",
      "require": "./dist/data-loader.cjs"
    },
    "./debug": {
      "import": "./dist/debug.js",
      "require": "./dist/debug.cjs"
    },
    "./logger": {
      "import": "./dist/logger.js",
      "require": "./dist/logger.cjs"
    },
    "./mcp": {
      "import": "./dist/mcp.js",
      "require": "./dist/mcp.cjs"
    },
    "./pricing-fetcher": {
      "import": "./dist/pricing-fetcher.js",
      "require": "./dist/pricing-fetcher.cjs"
