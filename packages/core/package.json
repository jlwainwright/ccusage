{
  "name": "@ccusage/core",
  "type": "module",
  "version": "15.2.0",
  "description": "Core library for Claude Code usage analysis",
  "author": "ryoppippi",
  "license": "MIT",
  "funding": "https://github.com/ryoppippi/ccusage?sponsor=1",
